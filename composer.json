{
    "schema": "https://getcomposer.org/schema.json",
    "name": "curtistinkers/get-main-site-name",
    "description": "A simple package to get the main site name in a WordPress multisite installation.",
    "type": "wordpress-muplugin",
    "keywords": [ "wordpress-muplugin", "get-main-site-name" ],
    "homepage": "https://github.com/curtistinkers/get-main-site-name-wpplugin",
    "license": "MIT",
    "authors": [
        {
            "name": "curtistinkers",
            "email": "curtistinkers.commit@gmail.com",
            "homepage": "https://curtistinkers.com",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/curtistinkers/get-main-site-name-wpplugin/issues",
        "wiki":   "https://github.com/curtistinkers/get-main-site-name-wpplugin/wiki",
        "source": "https://github.com/curtistinkers/get-main-site-name-wpplugin"
    },
    "require-dev": {
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-strict-rules": "^2.0",
        "szepeviktor/phpstan-wordpress": "^2.0",
        "wp-coding-standards/wpcs": "^3.3"
    },
    "autoload": {
        "psr-4": {
            "Curtistinkers\\GetMainSiteName\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Curtistinkers\\GetMainSiteName\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true
        }
    }
}
